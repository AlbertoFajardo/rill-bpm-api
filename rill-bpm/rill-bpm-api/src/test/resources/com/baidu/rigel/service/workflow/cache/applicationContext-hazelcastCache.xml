<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:hz="http://www.hazelcast.com/schema/config"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://www.hazelcast.com/schema/config http://www.hazelcast.com/schema/config/hazelcast-spring.xsd"
       default-autowire="byName">

    <hz:hazelcast id="hz1Instance">
        <hz:config>
               <!--
               <hz:group name="dev" password="password" />
               <hz:network port="5701" port-auto-increment="true">
                   <hz:join>
                       <hz:multicast enabled="false" multicast-group="224.2.2.3"  multicast-port="54327" />
                       <hz:tcp-ip enabled="true">
                           <hz:member>10.10.1.2, 10.10.1.3</hz:member>
                       </hz:tcp-ip>
                   </hz:join>
               </hz:network>
               -->
            <hz:queue name="hzQueue" max-size-per-jvm="3" />
            
            <hz:map name="hz1LRUMap">
                <hz:near-cache time-to-live-seconds="0" max-idle-seconds="60"
                   eviction-policy="LRU" max-size="3" invalidate-on-change="true" />
            </hz:map>
        </hz:config>
    </hz:hazelcast>
       
    <hz:hazelcast id="hz2Instance">
        <hz:config>
               <!--
               <hz:group name="dev" password="password" />
               <hz:network port="5701" port-auto-increment="true">
                   <hz:join>
                       <hz:multicast enabled="false" multicast-group="224.2.2.3"  multicast-port="54327" />
                       <hz:tcp-ip enabled="true">
                           <hz:member>10.10.1.2, 10.10.1.3</hz:member>
                       </hz:tcp-ip>
                   </hz:join>
               </hz:network>
               -->
            <hz:queue name="hzQueue" max-size-per-jvm="3" />
            
            <hz:map name="hz2LRUMap">
                <hz:near-cache time-to-live-seconds="0" max-idle-seconds="60"
                   eviction-policy="LRU" max-size="3" invalidate-on-change="true" />
            </hz:map>
        </hz:config>
    </hz:hazelcast>
</beans>
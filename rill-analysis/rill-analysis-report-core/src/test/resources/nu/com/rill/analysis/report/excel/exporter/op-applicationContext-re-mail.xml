<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-2.5.xsd"
       default-autowire="byName">

    <context:annotation-config />
	
	<bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
	  <property name="locations" value="classpath:conf/ReportEngine.properties"/>
	</bean>
	
	<bean id="sendReportViaEmailHelper" class="nu.com.rill.analysis.report.excel.export.SendReportViaEmailHelper"></bean>
	
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host">
			<value>mail2-in.baidu.com</value>
		</property>
		
		<property name="defaultEncoding" value="utf-8"></property>
	</bean>
	
	<bean id="simpleMailMessage" class="org.springframework.mail.SimpleMailMessage">
		<property name="from">
			<value>watchdog@baidu.com</value>
		</property>
		<property name="subject">
			<value> - From Rigel-OP Report Center.</value>
		</property>
		<property name="to">
			<list>
				<!-- 
				<value>sushuang@baidu.com</value>
				 -->
				<value>sfcrm-mon@baidu.com</value>
			</list>
		</property>
		<property name="bcc">
			<list>
				<value>mengran@baidu.com</value>
				<!-- OP -->
				<value>wuwei03@baidu.com</value>
			</list>
		</property>
	</bean>
	
    <bean id="templateMailSender" class="nu.com.rill.analysis.report.excel.export.InlineMailContentMailSender">
    	<property name="offlineMode">
    		<value>${re.mail.offlineMode}</value>
    	</property>
    </bean>

    <bean id="taskExecutor" class="org.springframework.core.task.SyncTaskExecutor">
    </bean>

</beans>